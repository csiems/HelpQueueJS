<div id="new-ticket-form" class="col-md-6 col-md-offset-3">
  <form class="form">
    <div class="form-group">
      {{input class="form-control" value=author id="author" placeholder="Please enter your name"}}
    </div>
    <div class="form-group">
      {{input class="form-control" value=location id="location" placeholder="Please enter your location"}}
    </div>
    <div class="form-group">
      {{textarea class="form-control" value=description id="description" placeholder="Give a brief description of issue you are having."}}
    </div>
    <button class="btn btn-danger pull-right" {{action 'saveTicket'}}>Help!</button>
  </form>
</div>
